  <!-- AUTH MODAL -->
  <div class="overlay" id="overlay" role="dialog" aria-modal="true" aria-label="Sign in modal">
    <div class="modal">
      <div class="modalHead">
        <h2>Sign in / Register (demo)</h2>
        <button class="close" onclick="closeAuth()" aria-label="Close">‚úï</button>
      </div>
      <div class="modalBody">
        <div class="steps">
          <div class="step">
