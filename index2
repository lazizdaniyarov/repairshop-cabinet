  <div class="toast" id="toast"></div>

  <script>
    // --- Fake state ---
    const state = {
      user: { name: 'Guest', phone: '+998 (__) ___ __ __', loggedIn: false },
      points: 450,
      tier: 'SILVER',
      vehicle: { brand:'Chevrolet', model:'Lacetti', year:'2012', vin:'KLAFA8E8B8B712356' },
      favorites: [
        { id: 1, name: 'Castrol EDGE 5W-30 4L', price: 295000, status: 'In stock' },
        { id: 2, name: 'Mann Oil Filter W712/83', price: 80000, status: 'In stock' },
        { id: 3, name: 'Brembo Brake Pads (Lacetti)', price: 210000, status: 'Delivery 1‚Äì2 days' },
      ],
      orders: [
        { id: 45678, date: '12.03.2024', total: 325000, status: 'Shipped', items: ['Oil filter', 'Cabin filter'] },
        { id: 45432, date: '10.03.2024', total: 210000, status: 'Confirmed', items: ['Brake pads'] },
        { id: 44910, date: '05.03.2024', total: 295000, status: 'Delivered', items: ['Engine oil 5W-30 4L'] },
      ],
      savedSearches: [
        { q: 'Brembo brake pads Lacetti', filter: 'Garage: Lacetti', pinned: true },
        { q: '5W-30 engine oil', filter: 'Promo', pinned: true },
      ],
      recentSearches: [
        { q: 'Wheel bearing Lacetti', filter: 'In stock' },
        { q: 'Spark plugs', filter: 'Top rated' },
        { q: 'Cabin filter Lacetti', filter: 'Fast delivery' },
      ],
      cartCount: 2,
    };

    // --- Helpers ---
    const fmt = n => new Intl.NumberFormat('en-US').format(n) + ' UZS';
    const maskVIN = vin => vin.slice(0,3) + '‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢' + vin.slice(-4);
    function $(id){ return document.getElementById(id); }

    // --- Toast ---
    let toastTimer;
    function toast(msg){
      const t = $('toast');
      t.textContent = msg;
      t.style.display = 'block';
      clearTimeout(toastTimer);
      toastTimer = setTimeout(()=> t.style.display='none', 1900);
    }

    // --- Routing ---
    function go(hash){ location.hash = hash; }
    function route(){
      const r = (location.hash || '#/dashboard').replace('#/','');
      document.querySelectorAll('.page').forEach(p=>p.classList.remove('active'));
      const page = document.getElementById('page-' + r);
      (page || $('page-dashboard')).classList.add('active');

      document.querySelectorAll('.nav a').forEach(a=>{
        a.classList.toggle('active', a.dataset.route === r);
      });
    }

    // --- Render ---
    function render(){
      // Profile
      $('profileName').textContent = state.user.name;
      $('profilePhone').textContent = state.user.phone;
      $('avatar').textContent = (state.user.name || 'G').trim().slice(0,1).toUpperCase();
      $('points').textContent = state.points;
      $('tier').textContent = state.tier;

      $('kpiPoints').textContent = state.points;
      $('kpiTier').textContent = state.tier;
      $('bonusPoints').textContent = state.points;
      $('bonusTier').textContent = state.tier;
      $('needPoints').textContent = Math.max(0, 1200 - state.points);

      // Vehicle
      const v = state.vehicle;
      const vTitle = `${v.brand} ${v.model} ${v.year}`;
      $('vehicleTitle').textContent = vTitle;
      $('garageVehicle').textContent = vTitle;
      $('vehicleVin').textContent = maskVIN(v.vin);
      $('garageVin').textContent = maskVIN(v.vin);

      // Badges
      $('favBadge').textContent = state.favorites.length;
      $('cartBadge').textContent = state.cartCount;

      // Auth button
      $('authBtn').textContent = state.user.loggedIn ? 'Account' : 'Sign in';

      // Active orders dashboard
      const active = state.orders.slice(0,2);
      $('activeOrders').innerHTML = active.map(o=>{
        const tagClass = o.status==='Delivered' ? 'ok' : (o.status==='Shipped' ? 'warn' : 'warn');
        return `
          <div class="row">
            <div class="grow">
              <div class="title">Order #${o.id}</div>
              <div class="meta">${o.date} ‚Ä¢ ${fmt(o.total)}</div>
            </div>
            <span class="tag ${tagClass}">${o.status}</span>
            <button class="btn" onclick="showOrder(${o.id}); go('#/orders')">Details</button>
          </div>
        `;
      }).join('');

      // Saved searches dashboard
      $('savedSearches').innerHTML = state.savedSearches.map(s=>`
        <div class="row">
          <div class="grow">
            <div class="title">${escapeHtml(s.q)}</div>
            <div class="meta">${escapeHtml(s.filter)}</div>
          </div>
          <button class="btn" onclick="toast('Search repeated (fake)')">Run</button>
        </div>
      `).join('');

      // Favorites page
      $('favList').innerHTML = state.favorites.map(f=>`
        <div class="row">
          <div style="font-size:26px">üß©</div>
          <div class="grow">
            <div class="title">${escapeHtml(f.name)}</div>
            <div class="meta">${escapeHtml(f.status)} ‚Ä¢ ${fmt(f.price)}</div>
          </div>
          <button class="btn primary" onclick="addToCart()">Add to cart</button>
          <button class="btn" onclick="removeFav(${f.id})">Remove</button>
        </div>
      `).join('');

      // Orders table
      $('ordersTable').innerHTML = state.orders.map(o=>{
        const tagClass = o.status==='Delivered' ? 'ok' : (o.status==='Shipped' ? 'warn' : 'warn');
        return `
          <tr>
            <td><b>#${o.id}</b></td>
            <td>${o.date}</td>
            <td><b>${fmt(o.total)}</b></td>
            <td><span class="tag ${tagClass}">${o.status}</span></td>
            <td><button class="btn" onclick="showOrder(${o.id})">Details</button></td>
          </tr>
        `;
      }).join('');

      // Searches page
      $('savedList').innerHTML = state.savedSearches.map(s=>`
        <div class="row">
          <div class="grow">
            <div class="title">${escapeHtml(s.q)}</div>
            <div class="meta">${escapeHtml(s.filter)} ‚Ä¢ Pinned</div>
          </div>
          <button class="btn" onclick="toast('Unpinned (fake)')">Unpin</button>
          <button class="btn primary" onclick="toast('Search repeated (fake)')">Run</button>
        </div>
      `).join('');
      $('recentList').innerHTML = state.recentSearches.map(s=>`
        <div class="row">
          <div class="grow">
            <div class="title">${escapeHtml(s.q)}</div>
            <div class="meta">${escapeHtml(s.filter)}</div>
          </div>
          <button class="btn" onclick="toast('Saved (fake)')">Save</button>
        </div>
      `).join('');

      // Settings default values
      $('setName').value = state.user.loggedIn ? state.user.name : 'Ali';
      $('setPhone').value = state.user.loggedIn ? state.user.phone : '+998 90 123 45 67';

      // Garage inputs
      $('vinInput').value = state.vehicle.vin;
      $('nickInput').value = 'My ' + state.vehicle.model;
      $('brandSel').value = state.vehicle.brand;
      $('modelSel').value = state.vehicle.model;
      $('yearSel').value = state.vehicle.year;
    }

    function escapeHtml(s){
      return String(s).replace(/[&<>"']/g, c=>({
        '&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'
      }[c]));
    }

    // --- Orders details ---
    function showOrder(id){
      const o = state.orders.find(x=>x.id===id);
      if(!o) return;
      const steps = ['Created','Confirmed','Packed','Shipped','Delivered'];
      const idx = Math.max(0, steps.indexOf(o.status));
      const line = steps.map((s,i)=>{
        const cls = i<=idx ? 'ok' : 'warn';
        return `<span class="tag ${cls}" style="margin-right:8px">${s}</span>`;
      }).join('');

      $('orderDetails').innerHTML = `
        <div class="row">
          <div class="grow">
            <div class="title">Order #${o.id}</div>
            <div class="meta">${o.date} ‚Ä¢ ${fmt(o.total)} ‚Ä¢ Delivery: Tashkent (fake)</div>
            <div style="margin-top:10px">${line}</div>
            <div style="margin-top:10px" class="muted"><b>Items:</b> ${o.items.map(escapeHtml).join(', ')}</div>
          </div>
          <button class="btn primary" onclick="toast('Reordered (fake)')">Buy again</button>
        </div>
      `;
      toast(`Loaded order #${id}`);
    }

    // --- Favorites ---
    function removeFav(id){
      state.favorites = state.favorites.filter(f=>f.id!==id);
      render();
      toast('Removed from favorites');
    }
    function addAllFavs(){
      state.cartCount += state.favorites.length;
      render();
      toast('All favorites added to cart (fake)');
    }

    // --- Cart ---
    function addToCart(){
      state.cartCount += 1;
      render();
      toast('Added to cart (fake)');
    }

    // --- Garage ---
    function saveVehicle(){
      const vin = $('vinInput').value.trim() || 'UNKNOWNVIN000000000';
      const brand = $('brandSel').value;
      const model = $('modelSel').value;
      const year  = $('yearSel').value;
      state.vehicle = { ...state.vehicle, vin, brand, model, year };
      render();
      toast('Vehicle saved (fake)');
    }

    // --- Auth modal ---
    function openAuth(){ $('overlay').style.display='flex'; $('phone').focus(); }
    function closeAuth(){ $('overlay').style.display='none'; }
    function sendCode(){ toast('SMS code sent (fake)'); $('code').focus(); }
    function confirmLogin(){
      const ok1 = $('agree1').checked;
      const ok2 = $('agree2').checked;
      if(!ok1 || !ok2){ toast('Please accept agreements (demo)'); return; }
      const name = $('regName').value.trim() || 'User';
      const phone = $('phone').value.trim() || '+998 00 000 00 00';
      state.user = { name, phone, loggedIn: true };
      closeAuth();
      render();
      toast('Signed in (fake)');
    }
    function logout(){
      state.user = { name:'Guest', phone:'+998 (__) ___ __ __', loggedIn:false };
      render();
      toast('Logged out (fake)');
      go('#/dashboard');
    }

    // --- Keyboard shortcuts ---
    window.addEventListener('keydown', (e)=>{
      if(e.key === '/' && document.activeElement.tagName !== 'INPUT' && document.activeElement.tagName !== 'TEXTAREA'){
        e.preventDefault();
        $('q').focus();
      }
      if(e.key === 'Escape') closeAuth();
    });

    // --- Init ---
    window.addEventListener('hashchange', route);
    route();
    render();

    // Start with a sample order selected
    showOrder(45678);

    // Clicking outside modal closes it
    $('overlay').addEventListener('click', (e)=>{ if(e.target.id==='overlay') closeAuth(); });
  </script>
</body>
</html>
